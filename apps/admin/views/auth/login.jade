extends layout

block paths
	- var content_title= 'АВТОРИЗАЦИЯ'

block content_style
	link(rel='stylesheet', type='text/css', href='/build/css/admin/add.css')
	link(rel='stylesheet', type='text/css', href='/build/css/admin/login.css')


block content
	img.logo(src='/stuff/admin/icons/logo/ru_w.svg')
	.form_login
		.title= content_title
		form(action='/auth/login', method='post')
			.form_title Логин:
			input(type='text', name='login',)
			.form_title Пароль:
			input(type='password', name='password',)
			br
			br
			input(type='submit', value='Вход')
			input(type='button', value='Регистрация', onclick="location.href='/auth/registr';")