extends layout

block paths
	- var content_title= 'АВТОРИЗАЦИЯ'

block content_style
	link(rel='stylesheet', type='text/css', href='/build/css/admin/add.css')

block content
	.title= content_title
	form(action='/auth/login', method='post')
		.form_title Логин:
		input(type='text', name='login',)
		.form_title Пароль:
		input(type='password', name='password',)
		br
		br
		input(type='submit', value='Вход')
		input(type='button', value='Регистрация', onclick="location.href='/auth/registr';")