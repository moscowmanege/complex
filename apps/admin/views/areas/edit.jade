extends ../layout
include ../_forms.jade

block paths
	- var content_title= 'РЕДАКТИРОВАТЬ ПЛОЩАДКУ'

block content_style
	link(rel='stylesheet', type='text/css', href='/libs/css/font-awesome.css' + version)
	link(rel='stylesheet', type='text/css', href='/libs/css/wysiwyg-editor.min.css' + version)
	link(rel='stylesheet', type='text/css', href='/build/css/admin/add.css' + version)

block content_scripts
	script(type='text/javascript', src='/libs/js/wysiwyg.min.js' + version)
	script(type='text/javascript', src='/libs/js/wysiwyg-editor.min.js' + version)
	script(type='text/javascript', src='/build/js/admin/editor.js' + version)
	script(type='text/javascript', src='/build/js/admin/add.js' + version)

block sub_menu
	a.sub_item.back_link(href='/areas') Назад
	span.sub_item.toggle_eng Перевод

block content
	.form_block
		.title= content_title
		form(action="", method="post")
			.form_title Название:
			+form_text_single('title', area)
			.form_title Описание:
			+form_text_multi('description', area)
			.form_title Адрес:
			+form_text_single('adress', area.contacts)
			.form_title Часы работы:
			+form_text_single('schedule', area.contacts)
			.form_title Телефоны:
			+form_multiple_input('phones', area.contacts)
			.form_title E-mails:
			+form_multiple_input('emails', area.contacts)
			br
			br
			input.form_submit(type='submit', value='отправить')