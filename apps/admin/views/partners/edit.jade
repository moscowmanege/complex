extends ../layout
include ../_forms.jade

block paths
	- var content_title= 'РЕДАКТИРОВАТЬ ПАРТНЕРА'

block content_style
	link(rel='stylesheet', type='text/css', href='/libs/css/font-awesome.css')
	link(rel='stylesheet', type='text/css', href='/libs/css/wysiwyg-editor.min.css')
	link(rel='stylesheet', type='text/css', href='/build/css/admin/add.css')

block content_scripts
	script(type='text/javascript', src='/libs/js/wysiwyg.min.js')
	script(type='text/javascript', src='/libs/js/wysiwyg-editor.min.js')
	script(type='text/javascript', src='/build/js/admin/editor.js')
	script(type='text/javascript', src='/build/js/admin/add.js')

block sub_menu
	a.sub_item.back_link(href='/partners') < Назад
	span.sub_item.toggle_eng Перевод

block content
	include ../../../vars.jade
	.form_block
		.title= content_title
		form(action="", method="post", enctype='multipart/form-data')
			.form_title Заголовок:
			+form_text_single('title', partner)
			.form_title Описание:
			+form_text_multi('description', partner)
			.form_title Ссылка на сайт:
			input(type='text', name='link', value=partner.link)
			.form_title Логотип:
			if partner.logo
				img(src=partner.logo, style='outline: 1px solid red;')
				br
			input(type='file', name='logo')
			.form_title Тип:
			select(name='type')
				option(value='', selected=partner.type == '') нет
				each type in partners_types
					option(value=type, selected=type == partner.type)= __(type)
			.form_title Видимость:
			input(type='checkbox', name='status', value='hidden', checked=partner.status)
			!= ' скрыть'
			br
			br
			input(type='submit', value='отправить')