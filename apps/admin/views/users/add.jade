extends ../layout

block paths
	- var content_title= 'ДОБАВИТЬ ПОЛЬЗОВАТЕЛЯ'

block content_style
	link(rel='stylesheet', type='text/css', href='/build/css/admin/add.css')

block content_scripts
	script(type='text/javascript', src='/build/js/admin/add.js')

block sub_menu
	a.sub_item.back_link(href='/users') < Назад

block content
	.form_block
		.title= content_title
		br
		form(action="/users/add", method="post")
			.form_title ЛОГИН:
			input(type='text', name='login')
			.form_title E-MAIL:
			input(type='text', name='email')
			.form_title ПАРОЛЬ:
			input(type='password', name='password')
			.form_title РОЛЬ:
			select(name='status')
				option(value='User') Пользователь
				option(value='Redactor') Редактор
				option(value='Admin') Администратор
			br
			br
			input(type='submit', value='отправить')