@-webkit-keyframes barsuk {
	0% { background-position: 0 0; }
	100% { background-position: 100% 0; }
}

html, body, .main_block, .content_block
	height 1920px  // 100%

body
	margin 0
	padding 0
	&.barsuk
		animation barsuk 8s linear infinite
		background-image url('/stuff/monitors/backgrounds/barsuk.jpg')
		background-size 20%
		.main_block
			background-color rgba(255, 255, 255, 0.9)

.main_block
	width 1080px
	margin 0 auto

.monitor_panel
	overflow hidden
	margin-left 60px
	margin-right 60px
	margin-bottom 20px
	padding-top 15px
	padding-bottom 10px
	border-bottom 1px dashed black
	&.hide
		display none
	.panel_menu
		display block
		float left
		margin-right 15px
		&:last-child
			margin-right 0
	.logo
		display block
		margin-bottom 8px
		text-decoration none
		color black
		&:hover
			color red
