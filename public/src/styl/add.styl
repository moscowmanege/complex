.main_block
	width 1280px
	margin 40px auto

.menu_block
	user-select none
	border-bottom 1px solid black
	overflow hidden
	padding-bottom 5px
	a
		margin-right 20px
		font-size 18pt
		display block
		float left

.sub_menu_block
	user-select none
	height 25px
	margin-top 5px
	margin-bottom 20px
	.separator
		margin-right 10px
	.sub_item
		margin-right 10px
		cursor pointer
		&:hover
			color red
	.sub_search
		float right
		display block
		border none
		outline none
		padding 0px
		border-bottom 1px dotted black
		height 20px

.lists_block
	border-top 1px dotted black
	.list_item
		padding-top 8px
		padding-bottom 8px
		border-bottom 1px dotted black
		.item_rm
			display none
			&.show
				display inline
			&:after
				content '|'
				margin-left 5px
				margin-right 5px
				color black
		&:hover
			background-color rgb(240, 237, 242)

.add
	font-weight bold

b
	font-size 16px

a
	color black
	font-size 16px
	text-decoration none
	&:hover
		color red

.form_block
	position relative

input, textarea, select
	font-size 16px

.ru
	width 620px
	display inline-block
	&.input
		width auto

.en
	width 620px
	display none
	margin-left 20px
	&.input
		width auto

.en_img
	display none

.editor
	width 625px
	float left
	margin-right 20px
	margin-bottom 20px
	&:nth-child(3n)
		margin-right 0px
		display none

.title
	margin-top 20px
	font-size 20pt

.form_title
	margin-top 15px
	margin-bottom 15px
	font-size 14pt
	clear both

.form_section
	margin-left 10px
	margin-top 20px
	margin-bottom 20px
	font 14pt/14pt 'Times'
	font-weight bold

.form_submit
	margin-top 5px
	cursor pointer
	&:hover
		text-decoration underline

.footer_block
	display none

.spacer
	display inline-block
	width 10px
	text-align center
	margin-right 5px
	font-size 12pt

.form_images_upload
	position relative
	.images_upload_preview
		width 623px
		min-height 190px
		padding-top 10px
		overflow hidden
		border 1px solid red
		.placeholder
			width 190px
			height 190px
			margin-bottom 12px
			margin-left 12px
			float left
			background-color lightgrey
		.image_upload_preview
			width 190px
			height 190px
			margin-bottom 12px
			margin-left 12px
			float left
			background-size cover
			background-position center
			border 1px solid red
			&:hover
				outline 1px solid red
				.image_delete
					display block
			.image_delete
				display none
				position absolute
				padding 0px 6px 2px 6px
				background-color red
				color white
				cursor default
				&:hover
					background-color black
					color white
			.image_description
				position absolute
				width 623px
				min-height 180px
				// border 1px solid red
				left 645px
				top 0
				display none
				&.show
					display block
				.image_description_input
					display block
					float left
					width 295px
					height 197px
					outline none
					margin-right 20px
					resize none
					&:last-child
						margin-right 0px
					&.en_img
						display none