body
	margin 0
	padding 0

.main_block
	width 1200px
	margin 0px auto

.header_block
	padding-top 20px

.content_block
	padding-bottom 50px

.menu_block
	margin 0 auto
	user-select none
	border-bottom 1px dashed black
	overflow hidden
	padding-bottom 10px
	.logo
		margin-right 60px
	a
		margin-right 20px
		font-size 12pt
		display block
		float left

.sub_menu_block
	padding-top 5px
	padding-bottom 5px
	user-select none
	height 25px
	margin-top 5px
	margin-bottom 20px
	.separator
		margin-right 10px
	.sub_item
		margin-right 10px
		cursor pointer
		&:hover
			color red
	.sub_search
		float right
		display block
		border none
		outline none
		padding 0px
		border-bottom 1px dotted black
		height 20px

.lists_block
	border-top 1px dotted black
	.list_item
		padding-top 8px
		padding-bottom 8px
		border-bottom 1px dotted black
		.item_rm
			display none
			&.show
				display inline
			&:after
				content '|'
				margin-left 5px
				margin-right 5px
				color black
		&:hover
			background-color rgb(240, 237, 242)

.add
	font-weight bold

b
	font-size 16px

a
	color black
	font-size 16px
	text-decoration none
	&:hover
		color red

.form_block
	position relative

input, textarea, select
	font-size 16px
	outline none

.form_submit
	display block
	clear both

.ru
	box-sizing border-box
	margin 0
	width 590px
	display inline-block
	&.input
		width auto

.en
	box-sizing border-box
	margin 0
	width 590px
	display none
	margin-left 20px
	&.input
		width auto

.en_img
	display none

.editor
	width 588px
	float left
	margin-right 20px
	margin-bottom 20px
	border-radius 0px
	&.wysiwyg-active
		box-shadow none
		border 1px solid #ccc
	&:nth-child(3n)
		margin-right 0px
		display none

.title
	margin-top 20px
	font-size 20pt

.form_title
	margin-top 15px
	margin-bottom 15px
	font-size 14pt
	clear both

.footer_block
	display none

.spacer
	display inline-block
	width 10px
	text-align center
	margin-right 5px
	font-size 12pt

.form_images_upload
	position relative
	.images_upload_preview
		box-sizing border-box
		width 590px
		min-height 205px
		padding-top 10px
		overflow hidden
		border 1px solid red
		.placeholder
			width 180px
			height 180px
			margin-bottom 10px
			margin-left 10px
			float left
			background-color lightgrey
			border 1px solid red
		.image_upload_preview
			width 180px
			height 180px
			margin-bottom 10px
			margin-left 10px
			float left
			background-size cover
			background-position center
			border 1px solid red
			&:hover
				outline 1px solid red
				.image_delete
					display block
			.image_delete
				display none
				position absolute
				padding 0px 6px 2px 6px
				background-color red
				color white
				cursor default
				&:hover
					background-color black
					color white
			.image_description
				position absolute
				width 610px
				left 610px
				top 0
				bottom 0
				display none
				&.show
					display block
				.image_description_input
					box-sizing border-box
					display block
					float left
					width 285px
					height 100%
					border 1px solid #ccc
					margin-right 20px
					resize none
					&:last-child
						margin-right 0px
					&.en_img
						display none