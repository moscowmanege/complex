extends ../layout

block paths
	- var content_title= 'СОБЫТИЯ'

block content_style
	link(rel='stylesheet', type='text/css', href='/build/css/add.css')
	link(rel='stylesheet', type='text/css', href='/build/css/tuzik.css')

block content_scripts
	script(type='text/javascript', src='/build/js/lists.js')
	script(type='text/javascript', src='/build/js/tuzik.js')

block sub_menu
	a.sub_item.back_link(href='/') < Назад
	span.sub_item.toggle_rm Удалить
	input.sub_search(type='text', placeholder='поиск...')

block content
	.title= content_title
	br
	a.add(href='/events/add') добавить событие
	span= ' | '
	span.tuzik.open робот Тузик
	span.tuzik_form.hidden
		span= ' --> '
		input.tuzik_input(type='text', placeholder='Ссылка...')
		button.tuzik_add добавить
	br
	br
	.lists_block
		each event in events
			.list_item
				a.item_rm.event(href='#', id=event._id) удалить
				a.item_title(href='/events/edit/' + event._id)= event.i18n.title.get('ru')
				!=' --> '
				a(href='/events/edit/' + event._id + '/tickets')= 'билеты (' + event.tickets.ids.length + ')'