extends ../../layout
include ../forms.jade
include _forms.jade

block title
	title ДОБАВИТЬ СОБЫТИЕ

block content_style
	link(rel='stylesheet', type='text/css', href='/build/libs/css/font-awesome.css')
	link(rel='stylesheet', type='text/css', href='/build/libs/css/wysiwyg-editor.min.css')
	link(rel='stylesheet', type='text/css', href='/build/css/add.css')

block content_scripts
	script(type='text/javascript', src='/build/libs/js/wysiwyg.min.js')
	script(type='text/javascript', src='/build/libs/js/wysiwyg-editor.min.js')
	script(type='text/javascript', src='/build/js/editor.js')
	script(type='text/javascript', src='/build/js/add.js')
	script(type='text/javascript', src='/build/js/a_events.js')


block content
	.form_block
		a.back_link(href='/events') < Назад
		button.toggle_eng(type='button') перевод
		.title ДОБАВИТЬ СОБЫТИЕ
		form(action="/events/add", method="post")
			.form_title Название:
			+form_text_single('title')
			.form_title Описание:
			+form_text_multi('description')
			.form_title Комментарий (вместо билета):
			+form_alt_tickets('alt')
			.form_title Возростное ограничение:
			select(name='age')
				each age, i in new Array(19)
					option(value=i)= i + '+'
			.form_title Место:
			+form_area_select()
			.form_title Тип:
			select(name='type')
				option(value='exhibition') Выставка
				option(value='lecture') Лекция
			.form_title Интервал дат:
			+form_calendar('interval[begin]')
			!= ' --- '
			input(type='button', value=' ---> ').arrow_cal
			!= ' --- '
			+form_calendar('interval[end]')
			.form_title Участники:
			+form_members_select(members)
			.form_title Категории:
			+form_multiple_select('categorys', categorys)
			.form_title Видимость:
			input(type='checkbox', name='status', value='hidden')
			!= ' скрыть'
			.form_title Дата публикации:
			+form_calendar('date')
			br
			br
			input(type='submit', value='отправить')