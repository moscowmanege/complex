extends ../layout

block paths
	- var content_title= 'УЧАСТНИКИ'

block content_style
	link(rel='stylesheet', type='text/css', href='/build/css/add.css')

block content_scripts
	script(type='text/javascript', src='/build/js/lists.js')

block sub_menu
	a.sub_item.back_link(href='/') < Назад

block content
	.title= content_title
	br
	a.add(href='/members/add') добавить участника
	br
	br
	.main_menu_block
		each member in members
			.member
				a.rm_member(href='#', id=member._id)= 'удалить '
				!=' | '
				a(href='/members/edit/' + member._id)= member.i18n.name.get('ru')