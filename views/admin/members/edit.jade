extends ../layout
include ../_forms.jade

block paths
	- var content_title= 'РЕДАКТИРОВАТЬ УЧАСТНИКА'

block content_style
	link(rel='stylesheet', type='text/css', href='/build/libs/css/font-awesome.css')
	link(rel='stylesheet', type='text/css', href='/build/libs/css/wysiwyg-editor.min.css')
	link(rel='stylesheet', type='text/css', href='/build/css/add.css')

block content_scripts
	script(type='text/javascript', src='/build/libs/js/wysiwyg.min.js')
	script(type='text/javascript', src='/build/libs/js/wysiwyg-editor.min.js')
	script(type='text/javascript', src='/build/js/editor.js')
	script(type='text/javascript', src='/build/js/add.js')

block sub_menu
	a.sub_item.back_link(href='/members') < Назад
	span.sub_item.toggle_eng Перевод

block content
	.form_block
		.title= content_title
		form(action="", method="post", enctype='multipart/form-data')
			.form_title Имя:
			+form_text_single('name', member)
			.form_title Описание:
			+form_text_multi('description', member)
			.form_title Фото:
			if member.photo
				img(src=member.photo, style='outline: 1px solid red;')
				br
			input(type='file', name='photo')
			.form_title Роли:
			if (member.roles && member.roles.length > 0)
				.snake_outer
					each role in member.roles
						span.snake
							input.back(type="button", value="-")
							select(name='roles')
								option(value='actor', selected=role == 'actor') актер
								option(value='director', selected=role == 'director') режиссер
								option(value='author', selected=role == 'author') автор
								option(value='artist', selected=role == 'artist') художник
					input.forward(type="button", value="+")
			else
				.snake_outer
					span.snake
						input.back(type="button", value="-")
						select(name='roles')
							option(value='actor', selected=role == 'actor') актер
							option(value='dicrector', selected=role == 'dicrector') режиссер
							option(value='author', selected=role == 'author') автор
					input.forward(type="button", value="+")
			.form_title Видимость:
			input(type='checkbox', name='status', value='hidden', checked=member.status)
			!= ' скрыть'
			br
			br
			input(type='submit', value='отправить')