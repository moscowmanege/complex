extends ../layout

block paths
	- var content_title= 'ПОЛЬЗОВАТЕЛИ'

block content_style
	link(rel='stylesheet', type='text/css', href='/build/css/add.css')

block content_scripts
	script(type='text/javascript', src='/build/js/lists.js')

block sub_menu
	a.sub_item.back_link(href='/') < Назад

block content
	.title= content_title
	br
	if (session.status == 'Admin')
		a.add(href='/users/add') добавить пользователя
		br
		br
	.main_menu_block
		each user in users
			.user
				a.rm_user(href='#', id=user._id)= 'удалить '
				!=' | '
				a(href='/users/edit/' + user._id)= user.login